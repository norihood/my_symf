{% extends "::base.html.twig" %}

{% block title %}PhuongDemoBundle:Login:showLogin{% endblock %}

{% block body %}
<h1>Welcome to the Login:showLogin page</h1>

{% if app.session.flashBag.has('register_success') %}
    <div class="alert alert-success">
    	{# {{ dump(app.session.flashBag.get('register_success')) }} #}
        {% for msg in app.session.flashBag.get('register_success') %}
            {{ msg }}
        {% endfor %}
    </div>
{% endif %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />
    <br>
    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <br>
    <button type="submit" name="submit">login</button>
</form>

{% endblock %}
